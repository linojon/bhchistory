<% content_for :body_content_title do %>
  <%= @document.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @document.title %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @document.category %>
    </p>
  </section>
  <section>
    <h1>Subject</h1>
    <p>
      <%=raw @document.subject %>
    </p>
  </section>
  <section>
    <h1>Doctype</h1>
    <p>
      <%=raw @document.doctype %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @document.description %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @document.date %>
    </p>
  </section>
  <section>
    <h1>Source</h1>
    <p>
      <%=raw @document.source %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @document.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="documents">
      <% @documents.each do |document| %>
        <li>
          <%= link_to document.title, refinery.documents_document_path(document) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
