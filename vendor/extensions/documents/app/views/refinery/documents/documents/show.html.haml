- content_for :body_content_title do
  = @document.title


- content_for :body_content_left do
  %p
    %strong Category:
    = @document.category
  %p
    %strong Subject:
    = @document.subject
  %p
    %strong Type:
    = @document.doctype
  %p
    %strong Date:
    = @document.date
  %p
    %strong Source:
    = @document.source
  %p
    %strong Description:
  %div
    = raw @document.description

- content_for :body_content_right do
  %aside
    %p.italic Click to view full size:
    %ul.images
      - @document.images.each do |image|
        %li= link_to image_tag(image.thumbnail("200x200#c").url), image.url

= render '/refinery/content_page'
