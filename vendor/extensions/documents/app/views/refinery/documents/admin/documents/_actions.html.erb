<ul>
  <% if ::Refinery::Documents::Admin::DocumentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.documents_admin_documents_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_documents_admin_document_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Documents::Admin::DocumentsController.sortable? && ::Refinery::Documents::Document.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Documents"),
                 refinery.documents_admin_documents_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Documents"),
                 refinery.documents_admin_documents_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
